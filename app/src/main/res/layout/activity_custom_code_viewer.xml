<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CustomCodeViewerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/single_title_example"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textSize="24sp"
            android:background="@drawable/border"
            android:text="How this code works ?"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"/>

        <io.github.kbiakov.codeview.CodeView
            android:id="@+id/codeView"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/single_output_example"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textSize="24sp"
            android:background="@drawable/border"
            android:text="Output"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"/>

        <io.github.kbiakov.codeview.CodeView
            android:id="@+id/outputView"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/single_output_explaination_example"
            android:padding="4dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_700"
            android:textSize="24sp"
            android:background="@drawable/border"
            android:text="Explaintion"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="14dp"/>

        <io.github.kbiakov.codeview.CodeView
            android:visibility="gone"
            android:id="@+id/explainationView"
            android:layout_marginStart="12sp"
            android:layout_marginEnd="12sp"
            android:layout_marginTop="12sp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/banner_container2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>