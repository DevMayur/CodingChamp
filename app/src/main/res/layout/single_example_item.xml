<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/single_title_example"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:background="@drawable/border"
        android:text="How this code works ?"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"/>

    <io.github.kbiakov.codeview.CodeView
        android:id="@+id/codeView"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/single_output_example"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:background="@drawable/border"
        android:text="Output"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"/>

    <io.github.kbiakov.codeview.CodeView
        android:id="@+id/outputView"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/single_output_explaination_example"
        android:padding="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:background="@drawable/border"
        android:text="Explaintion"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="14dp"/>

    <io.github.kbiakov.codeview.CodeView
        android:id="@+id/explainationView"
        android:visibility="gone"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>